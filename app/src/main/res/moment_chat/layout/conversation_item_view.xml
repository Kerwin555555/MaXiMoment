<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#EEEEEE"
        android:src="@mipmap/local_avatar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12.5dp"
        android:layout_marginBottom="9.5dp"
        app:roundPercent="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rain of Moon"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/moment_text_ff1d1d1d"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="13dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toTopOf="@id/avatar"
        app:layout_constraintBottom_toTopOf="@id/last_message"

        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toStartOf="@id/gender"
        />

    <TextView
        android:id="@+id/last_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hi, nice day! "
        android:textColor="@color/moment_text_ff999999"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="13dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintEnd_toStartOf="@id/time"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        />
    <com.moment.app.main_chat.fragments.views.GrayGenderView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        app:layout_constraintStart_toEndOf="@id/name"
        app:layout_constraintEnd_toStartOf="@id/time"
        app:layout_constraintTop_toTopOf="@id/name"
        app:layout_constraintBottom_toBottomOf="@id/name"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:23"
        android:textColor="@color/moment_text_ff999999"
        android:textSize="12sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/name"
        />
    <TextView
        android:id="@+id/red_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#ffffffff"
        android:textSize="11sp"
        android:includeFontPadding="false"
        android:paddingVertical="2dp"
        android:background="@drawable/chat_red_dot"
        android:paddingHorizontal="5dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/last_message"
        app:layout_constraintBottom_toBottomOf="@id/last_message"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="#F4F4F4"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintEnd_toEndOf="parent">
    </View>
</androidx.constraintlayout.widget.ConstraintLayout>