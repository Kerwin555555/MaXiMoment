<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginVertical="14dp"
        android:layout_marginStart="15dp"
        android:src="@mipmap/local_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </ImageView>
    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lisa Vetnam"
        android:textColor="@color/moment_text_ff1d1d1d"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textSize="15sp"
        android:includeFontPadding="false"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12.5dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/chat"
        />
    <com.moment.app.ui.uiLibs.GenderAgeLayout
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toEndOf="@id/avatar"/>

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My City"
        android:textColor="#ffed9d1d"
        android:textSize="11sp"
        android:backgroundTint="#ED9D1D"
        android:layout_marginStart="6dp"
        android:paddingHorizontal="9dp"
        android:paddingVertical="2dp"
        app:layout_constraintStart_toEndOf="@id/gender"
        app:layout_constraintTop_toTopOf="@id/gender"
        app:layout_constraintBottom_toBottomOf="@id/gender"
        />
    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dance lover, genuine, kind"
        android:textColor="@color/moment_text_ff999999"
        android:textSize="12sp"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <FrameLayout
        android:id="@+id/chat"
        android:text="accost"
        android:layout_width="79dp"
        android:layout_height="29dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/chat_bg"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/chat_text"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5.5dp"
            android:text="@string/moment_Chat"
            android:textColor="@color/gender_text"
            android:textSize="12sp"
            app:drawableStartCompat="@mipmap/love_small_12dp" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>