<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/empty_layout"
        android:drawableTop="@mipmap/no_data"
        android:text="No data"
        android:layout_gravity="center"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/error_layout"
        android:background="@drawable/bg_shape_1a1a5cff_9dp"
        android:backgroundTint="@color/lit_pink"
        android:textColor="@color/lit_pink"
        android:text="Retry!"
        android:layout_gravity="center"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.moment.app.utils.MomentLoadingView
        android:id = "@+id/loading"
        android:drawableTop="@mipmap/page_loading"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"/>
</merge>