<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@mipmap/register_top_bg"
        app:layout_constraintDimensionRatio="510:409"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avatar"
        android:textStyle="bold"
        android:textColor="@color/moment_text_ff1d1d1d"
        android:textSize="24sp"
        app:layout_constraintVertical_bias="0.3802"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pic"/>
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/pic"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:background="#EEEEEE"
        android:scaleType="centerCrop"
        android:layout_marginTop="58.5dp"
        app:roundPercent="1"
        app:layout_constraintBottom_toTopOf="@id/text"
        app:layout_constraintTop_toBottomOf="@id/avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/upload"
        android:src="@mipmap/small_camera_no_plus"
        android:layout_width="65dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="@id/pic"
        app:layout_constraintBottom_toBottomOf="@id/pic"
        app:layout_constraintEnd_toEndOf="@id/pic"
        app:layout_constraintTop_toTopOf="@id/pic"/>
    <TextView
        android:id="@+id/text"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Uploading a Profile Picture with a Face Yields Better Recommendations"
        android:textColor="@color/moment_text_ff999999"
        android:textSize="12sp"
        android:layout_marginTop="58dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pic"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>