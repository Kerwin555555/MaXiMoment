<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintHorizontal_weight="139"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/chat">
        <FrameLayout
            android:id="@+id/accost"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginHorizontal="9.5dp"
            android:layout_marginTop="7.5dp"
            android:background="@drawable/chat_bg"
            android:text="accost">
            <TextView
                android:id="@+id/accost_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="5.5dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/moment_accost"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:drawableStartCompat="@mipmap/love_small_12dp" />
        </FrameLayout>
    </FrameLayout>
    <TextView
        android:id="@+id/chat"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:layout_weight="1"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="@string/moment_Chat"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintHorizontal_weight="75"
        android:textColor="@color/moment_text_ff1d1d1d"
        android:textSize="12dp"
        android:paddingBottom="2.5dp"
        app:layout_constraintStart_toEndOf="@id/container"
        app:layout_constraintEnd_toStartOf="@id/follow"/>

    <TextView
        android:id="@+id/follow"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:layout_weight="1"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="3dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="follow"
        android:paddingBottom="2.5dp"
        app:layout_constraintHorizontal_weight="75"
        android:textColor="@color/moment_text_ff1d1d1d"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/chat"/>
</merge>